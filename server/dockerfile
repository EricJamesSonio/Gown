# Use Node.js LTS
FROM node:18-alpine

# Working directory inside container
WORKDIR /app

# Copy only package files first for better caching
COPY package*.json ./

# Install backend dependencies
RUN npm install

# Copy the rest of the backend source
COPY . .

# Expose API port
EXPOSE 5000

# Run your backend server
CMD ["node", "src/server.js"]
